<!DOCTYPE html>
<html>
  <head>
    <title>Worksheet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="#">Navbar</a>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Work Shifts', work_shifts_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Locations', locations_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Сотрудники', employees_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Ставки', rates_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Траты', expenses_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Reports', reports_index_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Work Shift', new_work_shift_path, class: 'nav-link' %>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container main">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, message| %>
            <div class="alert <%= (name) %>">
              <button class="close" data-dismiss="alert">&times;</button>
              <%= message %>
            </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= yield %>
      </div>
    </div>

  </div>
  </body>
</html>
