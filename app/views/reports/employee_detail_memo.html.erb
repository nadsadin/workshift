<h1>Employee detail</h1>
<%= render 'form_em_detail' %>

<% @employees.each do |em| %>
    <h3><%= em.name %></h3>
    <h4>Work shift</h4>
    <table class="table table-striped table-hover">
      <thead class="thead-default">
        <tr>
          <th>Start</th>
          <th>End</th>
          <th>Location</th>
          <th>Rate</th>
          <th>Total Hours</th>
          <th>Amount</th>
          <th>Edit</th>
        </tr>
      </thead>
      <tbody>
    <% (@workshifts.where employee_id: em.id).order(:start_time).each do |w| %>
          <tr>
            <td><%= w.start_time.to_formatted_s(:short) %></td>
            <td><%= w.end_time.to_formatted_s(:short) %></td>
            <td><%= w.location.name %><br><%= w.memo %></td>
            <td><%= number_to_currency(w.rate.rate,:precision => 2) %></td>
            <td><%= w.min/60 %>:<%= sprintf '%02d', w.min%60 %></td>
            <td><%= number_to_currency(w.cost,:precision => 2) %></td>
            <td><%= link_to "Edit", edit_work_shift_path(w), class: "btn btn-primary" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <h4>Expenses</h4>
    <table class="table table-striped table-hover">
      <thead class="thead-default">
      <tr>
        <th>Date</th>
        <th>Memo</th>
        <th>Amount</th>
      </tr>
      </thead>
      <tbody>
      <% (@expenses.where employee_id: em.id).each do |ex| %>
        <tr>
          <td><%= ex.date.to_formatted_s(:short) %></td>
          <td><%= ex.memo %></td>
          <td><%= number_to_currency(ex.amount,:precision => 2) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <h4>Total: <%= number_to_currency(@workshifts.where("employee_id=?",em.id).sum('cost')+@expenses.where("employee_id=?",em.id).sum('amount'), :precision => 2) %></h4>
    <hr>
<% end %>